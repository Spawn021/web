<div class="mt-4">
    <h2>List</h2>
    <a href="/create" class="btn btn-primary">Create</a>
    </br>
    </br>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Author</th>
                <th scope="col">Des</th>
                <th scope="col" class="text-center">Link</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each blogs}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.author}}</td>
                <td>{{this.body}}</td>
                <td><img src="{{this.image}}" alt="" class="img-fluid mx-auto d-block" style="max-width: 300px;max-height: 300px;"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>